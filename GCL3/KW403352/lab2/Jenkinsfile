pipeline {
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS=credentials('dockerhubacc')
    }
    
    stages {
        stage('Cloning') {
            steps {
                git url:'https://github.com/InzynieriaOprogramowaniaAGH/MDO2023.git', branch: 'KW403352'
            }
        }
        stage('Building') {
            steps {
                sh 'docker build -f GCL3/KW403352/lab2/build/Dockerfile -t build .'
            }
        }
        stage('Test') {
            steps {
                sh 'docker build -f GCL3/KW403352/lab2/test/Dockerfile -t test .'
            }
        }
        stage('Login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('Publish') {
            steps {
                sh 'docker build -t artifact .'
                sh 'docker tag artifact wolskyyy/artifact'
                sh 'docker push wolskyyy/artifact'
            }
        }
    }
}
